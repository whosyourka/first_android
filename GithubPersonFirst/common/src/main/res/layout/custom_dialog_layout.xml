<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/dialog_corners_circle_bg"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_corners_circle_top_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/custom_dialog_title_height"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="@string/custom_dialog_title"
            android:textColor="@color/gray"
            android:textSize="@dimen/custom_dialog_title_16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_dialog_divider_size"
        android:background="@color/custom_dialog_horizontal_divider_gray" />

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/custom_dialog_message_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="内容"
            android:textColor="@color/custom_dialog_textcolor_normal"
            android:textSize="@dimen/custom_dialog_message_14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_dialog_divider_size"
        android:background="@color/custom_dialog_horizontal_divider_gray" />

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/neturalButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_dialog_button_height"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_bottom_circle"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/action_ignore"
            android:textColor="@color/custom_dialog_textcolor_normal"
            android:textSize="@dimen/custom_dialog_button_16sp"
            android:visibility="visible" />


        <View
            android:id="@+id/line1"
            android:layout_width="@dimen/custom_dialog_divider_size"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/custom_dialog_vertical_divider_gray" />


        <TextView
            android:id="@+id/negativeButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_dialog_button_height"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_bottom_circle"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/action_cancel"
            android:textColor="@color/custom_dialog_textcolor_normal"
            android:textSize="@dimen/custom_dialog_button_16sp" />

        <View
            android:id="@+id/line2"
            android:layout_width="@dimen/custom_dialog_divider_size"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/custom_dialog_vertical_divider_gray"
            android:visibility="visible" />

        <TextView
            android:id="@+id/positiveButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_dialog_button_height"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_bottom_circle"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/action_confirm"
            android:textColor="@color/custom_dialog_textcolor_highlight"
            android:textSize="@dimen/custom_dialog_button_16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/singleButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_dialog_button_height"
        android:background="@drawable/dialog_btn_bottom_right_circle"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/action_confirm"
        android:textColor="@color/custom_dialog_textcolor_highlight"
        android:textSize="@dimen/custom_dialog_button_16sp"
        android:visibility="gone" />

</LinearLayout>